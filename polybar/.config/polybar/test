[colors]
background = #282a36
background-alt = #44475a
foreground = #f8f8f2
primary = #bd93f9
secondary = #ffb86c
alert = #ff5555
disabled = #6272a4


[bar/toph]
width = 100%
height = 18pt
radius = 0
dpi = 100
background = ${colors.background}
foreground = ${colors.foreground}
line-size = 2pt
border-size = 3pt
border-color = ${colors.primary}
module-margin = 0
padding-left = 0
padding-right = 0
separator = "  "
separator-foreground = ${colors.disabled}

font-0 = JetBrainsMonoNerdFont-Bold:size=12

modules-left = xworkspaces
modules-center = xwindow
modules-right = wlan pulseaudio battery date
cursor-click = pointer
enable-ipc = true
wm-restack = i3


[module/xworkspaces]
type = internal/xworkspaces

label-active = %name%
label-active-background = ${colors.background-alt}
label-active-foreground = ${colors.disabled}
label-active-underline= ${colors.primary}
label-active-padding = 1

label-occupied = %name%
label-occupied-padding = 1

label-urgent = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

label-empty = %name%
label-empty-foreground = ${colors.disabled}
label-empty-padding = 1


[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%
label-padding-left=2
label-padding-right=2


[module/pulseaudio]
type = internal/pulseaudio

format-volume-prefix = "  "
format-volume-prefix-foreground = ${colors.primary}
format-volume = <label-volume>

label-volume = %percentage%%
label-volume-padding-left=2
label-volume-padding-right=2

label-muted = 
label-muted-foreground = ${colors.disabled}
label-muted-padding=2

click-left = pavucontrol


[module/battery]
type = internal/battery
full-at = 95
low-at = 15
battery = BAT1
adapter = ADP1
poll-interval = 5
time-format = %H:%M

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-prefix-foreground = ${colors.primary}
ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-foreground = ${colors.primary}
animation-charging-0 = 


[network-base]
type = internal/network
interval = 5
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-disconnected = %{F#F0C674}%{F#707880} disconnected

[module/wlan]
inherit = network-base
interface-type = wireless
label-connected = %{F#F0C674}%{F-} %essid%

[module/eth]
inherit = network-base
interface-type = wired
label-connected = %{F#F0C674}󰈀%{F-} wired


[module/date]
type = internal/date
interval = 1

date = %a  %d %b  %H:%M:%S 
label = %date%
label-foreground = ${colors.primary}
label-padding-left=2
label-padding-right=2


[settings]
screenchange-reload = true
pseudo-transparency = true
