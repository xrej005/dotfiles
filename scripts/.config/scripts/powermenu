CHOSEN=$(printf "Suspend\nReboot\nShutdown\nLock\nLog Out" | wofi --dmenu --config ~/dotfiles/waybar/.config/waybar/powermenu-config)

case "$CHOSEN" in
    "Suspend") systemctl suspend-then-hibernate ;;
    "Reboot") reboot ;;
    "Shutdown") poweroff ;;
    "Lock") lockscreen ;;
    "Log Out") hyprctl dispatch exit ;;
    *) exit 1 ;;
esac
